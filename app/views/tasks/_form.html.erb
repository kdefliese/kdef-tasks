<%= form_for @task, :html => {:class => "form-inline"} do |f| %>
  <fieldset>
    <legend><%= legend_text %></legend>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :completed %>
    <%= f.date_field :completed %>
    <%= f.label :person_id, "Task owner:" %>
    <%= f.collection_select(:person_id, Person.all, :id, :name) %>
    <%= f.submit value: "#{button_text}", class: "new_button"%>
  </fieldset>
<% end %>
